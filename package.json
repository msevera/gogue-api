{
  "name": "gogue-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "firebase:emulator": "firebase emulators:start --import=./firebase-emulator --export-on-exit"
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@golevelup/nestjs-discovery": "^4.0.2",
    "@google-cloud/storage": "^7.16.0",
    "@langchain/anthropic": "^0.3.20",
    "@langchain/core": "^0.3.69",
    "@langchain/langgraph": "^0.4.4",
    "@langchain/langgraph-checkpoint-mongodb": "^0.1.0",
    "@langchain/openai": "0.6.7",
    "@nestjs/apollo": "^13.0.2",
    "@nestjs/bullmq": "^11.0.2",
    "@nestjs/common": "^11.0.4",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.4",
    "@nestjs/graphql": "^13.0.2",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/mongoose": "^11.0.0",
    "@nestjs/platform-express": "^11.0.4",
    "@pinecone-database/pinecone": "^4.1.0",
    "@redis/client": "^1.6.0",
    "@tavily/core": "^0.0.2",
    "axios": "^1.8.2",
    "bullmq": "^5.56.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dataloader": "^2.2.3",
    "dotenv": "^16.4.7",
    "firebase-admin": "^12.7.0",
    "graphql": "^16.10.0",
    "graphql-redis-subscriptions": "^2.7.0",
    "graphql-subscriptions": "^3.0.0",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.18.0",
    "mongoose": "^8.9.5",
    "mongoose-lean-defaults": "^2.2.1",
    "mongoose-lean-getters": "^2.1.1",
    "mongoose-lean-virtuals": "^1.1.0",
    "openai": "^5.12.2",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "remove-markdown": "^0.6.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.3",
    "uid": "^2.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.4",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslab": "^1.0.22",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/common$": "<rootDir>/../libs/common/src",
      "^@app/common/(.*)$": "<rootDir>/../libs/common/src/$1"
    }
  },
  "overrides": {
    "@golevelup/nestjs-discovery": {
      "@nestjs/common": "$@nestjs/common",
      "@nestjs/core": "$@nestjs/core"
    }
  }
}
